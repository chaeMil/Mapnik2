<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatEditText
        android:textSize="35dp"
        android:id="@+id/playerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerNameEditText"
        android:layout_alignLeft="@+id/playerNameEditText"
        android:layout_alignStart="@+id/playerNameEditText"
        android:layout_alignRight="@+id/createPlayerButton"
        android:layout_alignEnd="@+id/createPlayerButton"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <at.markushi.ui.CircleButton
        android:src="@drawable/ic_action_done"
        android:id="@+id/createPlayerButton"
        app:cb_color="@color/bright_purple"
        app:cb_pressedRingWidth="6dip"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/playerNameEditText"
        android:layout_alignEnd="@+id/playerNameEditText" />

</RelativeLayout>